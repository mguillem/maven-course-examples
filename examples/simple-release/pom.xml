<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>maven.course</groupId>
  <artifactId>simple-release</artifactId>
  <version>2.0.7-SNAPSHOT</version>
  <name>simple-release-example</name>
  <description>Example using maven-release-plugin</description>
  <organization>
    <name>javainabox</name>
  </organization>
  <ciManagement>
      <system>Jenkins CI</system>
      <url>http://localhost:8080/job/simple-release-example</url>
  </ciManagement>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
  </properties>

  <scm>
    <connection>scm:git:https://github.com/tfr42/maven-course-examples.git</connection>
    <developerConnection>scm:git:https://github.com/tfr42/maven-course-examples.git</developerConnection>
    <url>https://github.com/tfr42/maven-course-examples/</url>	
    <tag>simple-release-2.0.7</tag>
  </scm>

  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <version>5.3.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  
  <build>
    <defaultGoal>release:prepare release:perform</defaultGoal>
  	<plugins>
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-release-plugin</artifactId>
  			<version>2.5.3</version>
  			<configuration>
  				<commitByProject>true</commitByProject>
  				<arguments>-N -e</arguments>
  				<pomFileName>examples/simple-release/pom.xml</pomFileName>
  			</configuration>
  		</plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>buildnumber-maven-plugin</artifactId>
          <version>1.4</version>
          <configuration>
              <shortRevisionLength>10</shortRevisionLength>
          </configuration>
          <executions>
            <execution>
              <id>create-number</id>
              <phase>prepare-package</phase>
              <goals>
                <goal>create</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jar-plugin</artifactId>
          <version>3.1.0</version>
          <configuration>
            <archive>
              <manifestEntries>
                <Build-Number>${buildNumber}</Build-Number>
              </manifestEntries>
              <manifest>
                <mainClass>maven.course.release.App</mainClass>
                <addClasspath>true</addClasspath>
                <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              </manifest>
            </archive>
          </configuration>
        </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-enforcer-plugin</artifactId>
            <version>1.4.1</version>
            <executions>
                <execution>
                    <id>enforce-rules</id>
                    <goals>
                        <goal>enforce</goal>
                    </goals>
                    <configuration>
                        <rules>
                            <dependencyConvergence/>
                            <requireReleaseDeps>
                                <message>No Snapshots As Dependency Allowed!</message>
                            </requireReleaseDeps>
                        </rules>
                    </configuration>
                </execution>
            </executions>
        </plugin>
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.6.0</version>
            <executions>
                <execution>
                    <phase>verify</phase>
                    <goals>
                        <goal>java</goal>
                    </goals>
                </execution>
            </executions>
            <configuration>
                <mainClass>maven.course.release.App</mainClass>
            </configuration>
        </plugin>
    </plugins>
  </build>

  <distributionManagement>
  	<repository>
  		<id>nexus-releases</id>
  		<name>Nexus-Repository</name>
  		<url>http://localhost:8081/nexus/content/repositories/releases</url>
  	</repository>
  	<snapshotRepository>
  		<id>nexus-snapshots</id>
  		<url>http://localhost:8081/nexus/content/repositories/snapshots</url>
  	</snapshotRepository>
  </distributionManagement>
</project>
